                <RadioButton app:id="@+id/radioCouns" app:layout_width="wrap_content" app:layout_height="wrap_content" app:layout_marginTop="5dp" app:text="2500" />
            </RadioGroup>
            <Button app:id="@+id/btnLogin" app:layout_width="wrap_content" app:layout_height="wrap_content" app:layout_marginTop="@dimen/activity_vertical_margin" app:layout_marginBottom="@dimen/activity_vertical_margin" app:text="@string/login" app:textAllCaps="false" style="?unknown_attr_ref: 101032f" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
