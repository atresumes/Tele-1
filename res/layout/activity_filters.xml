        <TextView app:textColor="@color/primary_text" app:layout_width="match_parent" app:layout_height="wrap_content" app:layout_marginTop="@dimen/activity_vertical_margin" app:text="@string/language" app:textAllCaps="true" />
        <Spinner app:id="@+id/sp_language" app:layout_width="match_parent" app:layout_height="wrap_content" app:layout_marginTop="6dp" style="?attr/spinnerDropDownItemStyle" />
        <TextView app:textColor="@color/primary_text" app:layout_width="match_parent" app:layout_height="wrap_content" app:layout_marginTop="@dimen/activity_vertical_margin" app:text="@string/gender" app:textAllCaps="true" />
