            <RadioButton app:id="@+id/radio_male" app:layout_width="wrap_content" app:layout_height="wrap_content" app:text="@string/male" />
            <RadioButton app:id="@+id/radio_female" app:layout_width="wrap_content" app:layout_height="wrap_content" app:layout_marginLeft="@dimen/activity_horizontal_margin" app:text="@string/female" />
