            </android.support.v7.widget.CardView>
            <TextView app:layout_width="wrap_content" app:layout_height="wrap_content" app:layout_marginTop="@dimen/activity_vertical_margin" app:text="@string/your_preferred_date" app:textAllCaps="true" />
            <com.talktoangel.gts.CalendarCustomView app:id="@+id/custom_calendar" app:layout_width="match_parent" app:layout_height="wrap_content" />
            <android.support.v7.widget.RecyclerView app:id="@+id/recycler_fs" app:layout_width="match_parent" app:layout_height="wrap_content" />
            <Spinner app:id="@+id/sp_app_type_sf" app:layout_width="match_parent" app:layout_height="wrap_content" app:layout_marginTop="@dimen/activity_vertical_margin" app:layout_marginBottom="8dp" />
        </LinearLayout>
    </ScrollView>
    <ProgressBar app:id="@+id/progress_sf" app:visibility="gone" app:layout_width="match_parent" app:layout_height="wrap_content" app:layout_above="@+id/btn_send_sf" style="?unknown_attr_ref: 1010077" />
