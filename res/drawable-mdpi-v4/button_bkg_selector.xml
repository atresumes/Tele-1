<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/four" />
            <solid android:color="@color/active_yellow" />
            <padding android:left="@dimen/sixteen" android:top="@dimen/sixteen" android:right="@dimen/sixteen" android:bottom="@dimen/sixteen" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/four" />
            <solid android:color="@color/active_yellow" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/four" />
            <solid android:color="@color/inactive_bg" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/four" />
            <solid android:color="@color/active_yellow" />
        </shape>
    </item>
</selector>
